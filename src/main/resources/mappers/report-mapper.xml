<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.e.shortform.domain.report.mapper.ReportMapper">

    <resultMap id="ReportResultMap" type="com.e.shortform.domain.report.vo.ReportVo">
        <id column="ID" property="" />
        <result column="TARGET_TYPE" property="targetType" />
        <result column="TARGET_ID" property="targetId" />
        <result column="REPORTER_USER_ID" property="reporterUserId" />
        <result column="REPORTED_USER_ID" property="reportedUserId" />
        <result column="REPORT_TYPE" property="reportType" />
        <result column="STATUS" property="status" />
        <result column="REVIEW_COMMENT" property="reviewComment" />
        <result column="REVIEWED_AT" property="reviewedAt" />
        <result column="ACTION_TAKEN" property="actionTaken" />
        <result column="CREATED_AT" property="createdAt" />
        <result column="UPDATED_AT" property="updatedAt" />
    </resultMap>

    <select id="getReportAll" resultMap="ReportResultMap">
        SELECT * FROM SHORTFORM_REPORTS
    </select>

</mapper>